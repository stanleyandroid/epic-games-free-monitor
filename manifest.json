{
  "manifest_version": 2,
  "name": "Epic Games Free Monitor",
  "version": "1.0",
  "description": "Epic Games Store free game checker",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "https://store-site-backend-static.ak.epicgames.com/*",
    "alarms",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/popup.html"
  }
}